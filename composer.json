{
  "name": "farmani/ramilix",
  "description": "Free and OpenSource personal website",
  "keywords": [
    "ramilix",
    "cms",
    "blog",
    "personal website"
  ],
  "homepage": "http://www.ramilix.com/",
  "license": "MIT",
  "authors": [
    {
      "name": "Ramin Farmani",
      "email": "ramin.farmani@gmail.com",
      "homepage": "http://ramilix.com",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": ">=2.0.4",
    "yiisoft/yii2-bootstrap": "*",
    "yiisoft/yii2-swiftmailer": "*",
    "yiisoft/yii2-imagine": "~2.0.0",
    "yiisoft/yii2-jui": "~2.0.0",
    "yiisoft/yii2-redis": "~2.0.0",
    "yiisoft/yii2-twig": "~2.0.0",
    "algolia/algoliasearch-client-php": "1.5.*",
    "creocoder/yii2-flysystem": "0.8.*"
  },
  "require-dev": {
    "yiisoft/yii2-codeception": "*",
    "yiisoft/yii2-debug": "*",
    "yiisoft/yii2-gii": "*",
    "yiisoft/yii2-faker": "*",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "config": {
    "process-timeout": 1800
  },
  "scripts": {
    "post-create-project-cmd": [
      "yii\\composer\\Installer::setPermission"
    ]
  },
  "extra": {
    "asset-installer-paths": {
      "npm-asset-library": "vendor/npm",
      "bower-asset-library": "vendor/bower"
    },
    "bootstrap": "yii\\jui\\Extension",
    "writable": [
      "runtime",
      "web/assets"
    ],
    "executable": [
      "yii"
    ]
  }
}
